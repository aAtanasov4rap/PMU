<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFuelActivity"
    android:background="@drawable/img_2">

    <Button
        android:id="@+id/insert_fuel"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="132dp"
        android:text="Добави зареждане"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/price_per_liter"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="Цена на литър"
        android:textColorHint="#000000"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/insert_fuel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/total_price"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Обща цена"
        android:textColorHint="#000000"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/price_per_liter"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="42dp"
        android:text="Изберете обща сума и цена за литър при зареждане:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>