<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddServiceActivity"
    android:background="@drawable/img_2">


    <Button
        android:id="@+id/add_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="150dp"
        android:text="Добави поддръжка"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/price_number"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Цена"
        android:textColorHint="#000000"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/km_number"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="КМ на колата"
        android:textColorHint="#000000"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/price_number"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/oil_check_box"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="36dp"
        android:text="Масло"
        android:textColor="#000000"
        app:buttonTint="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/km_number"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/filter_check_box"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="28dp"
        android:text="Филтри"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/oil_check_box"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="42dp"
        android:text="Изберете от какво се състои поддръжката:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>